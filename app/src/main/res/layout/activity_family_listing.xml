                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:checked="@{listings.hh14.equals(`1`)}"
                                android:onClick="@{()->listings.setHh14(`1`)}"
                                android:text="@string/hh1401"

                                />

                            <RadioButton
                                android:id="@+id/hh1402"
